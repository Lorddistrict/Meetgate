{% extends 'default/base.html.twig' %}

{% block title %}Top 10 - Talks{% endblock %}

{% block body %}

  <div class="container-fluid">

    <div class="container" style="margin-top: 20px;">
      <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4 class="alert-heading">
          <i class="fas fa-info"></i> Info
        </h4>
        <p class="mb-0">Sort by Rate number, not very interesting</p>
      </div>
    </div>

    <div class="row">

      {% for talk in talks %}

      <div class="col-md-2" style="margin: 20px auto;">
        <div class="card border-light mb-3" style="max-width: 20rem;">
          <div class="card-header">{{ talk[0].title|upper }}</div>
          <div class="card-body">
            <h4 class="card-title">Rate : x{{ talk[0].rates|length }}</h4>
            <p class="card-text">
              {{ talk[0].description|length > 50 ? talk[0].description|slice(0,50) : talk[0].description }}
            </p>
            <a href="{{ url('talk', { id: talk[0].id } ) }}">read more</a>
          </div>
        </div>
      </div>

    {% endfor %}

    </div>
  </div>

{% endblock %}