{% extends 'default/base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

  <div class="container-fluid">
    <div class="row">

      {% include 'admin/menu.html.twig' %}

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        {% include 'default/flashs.html.twig' %}
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard (work in progress)</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <button class="btn btn-sm btn-outline-info dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span data-feather="calendar"></span>Today
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">This week</a>
              <a class="dropdown-item" href="#">This month</a>
              <a class="dropdown-item" href="#">This year</a>
            </div>
          </div>
        </div>

        <canvas class="my-4" id="myChart" width="900" height="380"></canvas>

        <h2>The last 10 events created</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Tags</th>
              <th>Descriptions</th>
              <th>Link</th>
            </tr>
            </thead>
            <tbody>

            {% for event in events %}

            <tr>
              <td><i class="fas fa-angle-right"></i></td>
              <td>{{ event.title }}</td>
              <td>
                {% for tag in event.tags %}
                  <a href="{{ url('tag', { id: tag.id }) }}" class="tag-link">
                    <span class="badge badge-pill badge-success">{{ tag.name }}</span>&nbsp;
                  </a>
                {% endfor %}
              </td>
              <td>
                {{ event.description|slice(0,80) }}
                <a href="{{ url('event', { id: event.id } ) }}">...read more</a>
              </td>
              <td>
                <a href="{{ url('event', { id: event.id } ) }}">
                  <i class="fas fa-eye"></i>
                </a>
              </td>
            </tr>

            {% endfor %}

            </tbody>
          </table>
        </div>

        <h2>The last 10 talks</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Descriptions</th>
              <th>Link</th>
              <th>Accept</th>
              <th>Refuse</th>
            </tr>
            </thead>
            <tbody>

            {% for talk in talks %}

            <tr>
              <td><i class="fas fa-angle-right"></i></td>
              <td>{{ talk.title }}</td>
              <td>
                {{ talk.description|slice(0,80) }}
                <a href="{{ url('talk', { id: talk.id } ) }}">...read more</a>
              </td>
              <td>
                <a href="{{ url('talk', { id: talk.id } ) }}">
                  <i class="fas fa-eye"></i>
                </a>
              </td>
              <td>
                <a href="{{ url('validate_talk', { id: talk.id } ) }}" class="badge badge-pill badge-success">
                  <i class="fas fa-check fa-green"></i>&nbsp;Accept
                </a>
              </td>
              <td>
                <a href="{{ url('refuse_talk', { id: talk.id } ) }}" class="badge badge-pill badge-danger">
                  <i class="fas fa-times fa-red"></i>&nbsp;Refuse
                </a>
              </td>
            </tr>

            {% endfor %}

            </tbody>
          </table>
        </div>

      </main>
    </div>
  </div>

  <script>
      var ctx = document.getElementById("myChart");
      var myChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
              datasets: [{
                  data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
                  lineTension: 0,
                  backgroundColor: 'transparent',
                  borderColor: '#007bff',
                  borderWidth: 4,
                  pointBackgroundColor: '#007bff'
              }]
          },
          options: {
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero: false
                      }
                  }]
              },
              legend: {
                  display: false,
              }
          }
      });
  </script>

{% endblock %}
