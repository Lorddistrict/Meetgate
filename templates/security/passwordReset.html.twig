{% extends 'default/base.html.twig' %}

{% block title %}Reset{% endblock %}

{% block body %}

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="spacer"></div>
      </div>
    </div>
    <h1>New password</h1>

    <hr class="my-4">

    <div class="row">
      <div class="col-md-12">

        <div class="alert alert-info">
          <i class="fas fa-info-circle fa-flasher"></i>
          You can now write your new password, don't forget it this time ;)
        </div>

        {{ form_start(form) }}

        <div class="form-group">
          {{ form_row(form.password) }}
        </div>

        <div class="form-group">
          {{ form_row(form.password.second) }}
        </div>

        <button type="submit" class="btn btn-primary btn-spacer">
          <i class="fas fa-rocket"></i>&nbsp;Change my password
        </button>

        {{ form_end(form) }}

      </div>
    </div>
  </div>

{% endblock %}