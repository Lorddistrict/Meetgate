{% extends 'default/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
  <div class="container">

    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">

          {% include 'default/flashs.html.twig' %}

          <div class="login100-form-title" style="background-image: url({{ asset('images/bg-01.jpg') }});">
					  <span class="login100-form-title-1">Register</span>
          </div>

          {{ form_start(form, {
            'attr': {
              'class': 'login100-form validate-form'
            }
          }) }}

          <div class="wrap-input100 validate-input m-b-26" data-validate="Email is required">
            <label><span class="label-input100">Email</span></label>
            {{ form_widget(form.email,{'attr': {'placeholder': 'Votre email','class':'input100'}}) }}
          </div>

          <div class="wrap-input100 validate-input m-b-26" data-validate="Firstname is required">
            <label><span class="label-input100">Firstname</span></label>
            {{ form_widget(form.firstname,{'attr': {'placeholder': 'Votre pr√©nom','class':'input100'}}) }}
          </div>

          <div class="wrap-input100 validate-input m-b-26" data-validate="Name is required">
            <label><span class="label-input100">Name</span></label>
            {{ form_widget(form.name,{'attr': {'placeholder': 'Votre nom','class':'input100'}}) }}
          </div>

          <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
            <label><span class="label-input100">Password</span></label>
            {{ form_widget(form.password,{'attr': {'placeholder': 'Votre mot de passe','class':'input100'}}) }}
          </div>

          <div class="flex-sb-m w-full p-b-30">
            <div class="contact100-form-checkbox">
              <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
              <label class="label-checkbox100" for="ckb1">Remember me</label>
            </div>

          </div>

          <div class="container-login100-form-btn">
            <button type="submit" class="login100-form-btn">Register</button>
          </div>

          {{ form_end(form) }}

          <div class="others" style="margin-left: 190px; padding-bottom: 30px;">
            Already an account ? <a href="{{ url('login') }}" class=""> Log me</a>
          </div>

        </div>
      </div>
    </div>

  </div>
{% endblock %}
