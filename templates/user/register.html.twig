{% extends 'default/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}

        <div class="form-group">
            <label>Prénom</label>
            {{ form_widget(form.name,{'attr': {'placeholder': 'Votre prénom','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Nom</label>
            {{ form_widget(form.firstname,{'attr': {'placeholder': 'Votre nom','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Email</label>
            {{ form_widget(form.email,{'attr': {'placeholder': 'Votre email','class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Password</label>
            {{ form_widget(form.password,{'attr': {'placeholder': 'Votre mot de passe','class':'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(form) }}


    </div>
{% endblock %}
