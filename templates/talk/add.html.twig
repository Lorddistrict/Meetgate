{% extends 'default/base.html.twig' %}

{% block title %}Create an talk{% endblock %}

{% block body %}

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="spacer"></div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <h1>New Talk</h1>
        <hr class="my-4">

        {{ form_start(form) }}

        <div class="form-group">
          <label for="title">Title : </label>
          {{ form_row(form.title, {
            'label': false,
            'attr': {
              'class': 'form-control',
              'id': 'title',
              'placeholder': 'Title'
            }
          }) }}
        </div>

        <div class="form-group">
          <label for="title">Description : </label>
          {{ form_row(form.description, {
            'label': false,
            'attr': {
              'class': 'form-control',
              'rows': 5,
              'placeholder': 'Explain the subject of this talk'
            }
          }) }}
        </div>

        <button class="btn btn-success float-left article-edit-btn">
          <i class="fas fa-check"></i>&nbsp;{{ 'Submit'|default('Save') }}
        </button>

        {{ form_end(form) }}

      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="spacer"></div>
      </div>
    </div>
  </div>

{% endblock %}